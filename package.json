{
  "name": "ai-social-justice-investing",
  "version": "1.0.0",
  "description": "Social Justice x AI Dashboard - A Cloudflare Worker-powered podcast research and planning platform",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run build && npm run db:migrate && wrangler deploy",
    "deploy:non-prod": "npm run build && npm run db:migrate && wrangler versions deploy",
    "start": "wrangler dev",
    "build": "npm run build:frontend && npm run build:worker",
    "build:frontend": "vite build",
    "build:worker": "wrangler deploy --dry-run",
    "types": "wrangler types",
    "postinstall": "npm run types",
    "tail": "wrangler tail",
    "deploy:import": "bash scripts/deploy-and-import.sh",
    "db:migrate": "wrangler d1 migrations apply sji-app-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply sji-app-db --local",
    "db:status": "wrangler d1 migrations list sji-app-db --remote",
    "db:status:local": "wrangler d1 migrations list sji-app-db --local",
    "db:check": "bash scripts/check-db-status.sh",
    "db:deduplicate-guests": "wrangler d1 execute sji-app-db --remote --file scripts/deduplicate_guests.sql",
    "import:json": "python3 scripts/import_json_data.py",
    "import:json:remote": "python3 scripts/import_json_data.py",
    "import:gemini": "python3 scripts/import_gemini_research.py --generate-all",
    "deploy:full": "npm run build && npm run db:migrate && npm run deploy && echo 'âœ… Deployment complete! Run: npm run import:gemini'",
    "test": "vitest run"
  },
  "keywords": [
    "cloudflare-workers",
    "hono",
    "ai-ethics",
    "social-justice",
    "podcast"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^0.0.66",
    "@hono/zod-openapi": "^0.16.0",
    "ai": "^3.4.7",
    "hono": "^4.0.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.4.5",
    "vite": "^5.4.10",
    "vitest": "^4.0.5",
    "wrangler": "^3.57.0"
  }
}
